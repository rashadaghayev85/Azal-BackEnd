@model Paginate<Banner>
@{
    ViewData["Title"] = "View";
}
<main style="margin-top: 70px; margin-left:60px;">


    <div class="container mt-5">
        <h2 class="text-center">Banner area</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-plus"></i>
        </a>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>

                        <th>Image</th>


                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody>
                   
                        @foreach (var item in Model.Datas)
                    {
                       
                            <tr style="background-color:#bbb">

                                <td>

                                <img style="width:500px;height:100px" src="~/assets/img/@item.Image" />

                                </td>


                                <td>

                                   

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white small">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                @if (item.IsActive == false)
                                {
                                    <form class="d-inline" method="post" asp-action="IsActive" asp-route-id="@item.Id">

                                        <button type="submit" class="btn btn-success text-white small">
                                            <i class="fa-solid fa-check"></i>
                                        </button>
                                    </form>


                                }
                                @if (item.IsActive == true)
                                {
                                    <form class="d-inline" method="post" asp-action="IsActive" asp-route-id="@item.Id">

                                        <button type="submit" class="btn btn-success text-white small">
                                            <i class="fa-solid fa-circle-minus"></i>
                                        </button>
                                    </form>


                                }
                                    <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                  
                                        <button type="submit" class="btn btn-danger text-white small">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                 


                </tbody>
            </table>
            <div class="pagination-area d-flex justify-content-center mt-3">
                <nav aria-label="...">
                    <ul class="pagination">
                        <li class="page-item @(Model.HasPrevious ? "" :"disabled")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPage; i++)
                        {
                            <li class="page-item @(Model.CurrentPage==i ? "disabled" : "")"><a class="page-link @(Model.CurrentPage == i ? "paginate-active" : "")" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }
                        <li class="page-item @(Model.HasNext ? "" :"disabled")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>

