@model TicketCreateVM

@{
    ViewData["Title"] = "Create Blog";
}
<main style="margin-top: 70px; margin-left:60px;">
    <h1>Create Flight</h1>


    <hr />

    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">


                <label asp-for="Price_az" class="control-label"></label>
                <input asp-for="Price_az" class="form-control" />
                <span asp-validation-for="Price_az" class="text-danger"></span>
            </div>
            <div class="form-group">


                <label asp-for="Price_usd" class="control-label"></label>
                <input asp-for="Price_usd" class="form-control" />
                <span asp-validation-for="Price_usd" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <label asp-for="Flight" class="control-label"></label>
                <select asp-for="Flight" class="form-control" asp-items="ViewBag.flights"></select>
                <span asp-validation-for="Flight" class="text-danger"></span>
            </div>


            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>


</main>
