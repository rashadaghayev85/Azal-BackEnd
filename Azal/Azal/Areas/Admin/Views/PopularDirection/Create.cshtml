@model PopularDirectionCreateVM

@{
    ViewData["Title"] = "Create Blog";
}
<main style="margin-top: 70px; margin-left:60px;">
    <h1>Create Popular Direction</h1>

    <h4>Popular Direction</h4>
    <hr />

    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="category">Image</label>
                <span asp-validation-for="Image" class="text-danger"></span>
                <input class="form-control form-bg-light" type="file" asp-for="Image" maxlength="100">

                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control"></input>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="PriceEconom" class="control-label"></label>
                <input asp-for="PriceEconom" class="form-control"></input>
                <span asp-validation-for="PriceEconom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceBiznes" class="control-label"></label>
                <input asp-for="PriceBiznes" class="form-control"></input>
                <span asp-validation-for="PriceBiznes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanguageId" class="control-label"></label>
                <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.Languages"></select>
                <span asp-validation-for="LanguageId" class="text-danger"></span>
            </div>






            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>


</main>
