@model FlightEditVM

@{
    ViewData["Title"] = "Edit Blog";
}
<main style="margin-top: 70px; margin-left:60px;width:1200px">
    <h2>Flight Blog</h2>

    <h4>Flight</h4>
    <hr />


    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div class="form-group">


                    <label asp-for="FlightNumber" class="control-label"></label>
                    <input asp-for="FlightNumber" class="form-control" />
                    <span asp-validation-for="FlightNumber" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="TicketCount" class="control-label"></label>
                    <input asp-for="TicketCount" class="form-control"></input>
                    <span asp-validation-for="TicketCount" class="text-danger"></span>
                </div>
       
        <div class="form-group ">
                    <label asp-for="Price_econom" class="control-label"></label>
                    <input asp-for="Price_econom" class="form-control"></input>
                    <span asp-validation-for="Price_econom" class="text-danger"></span>
        </div> <div class="form-group ">
            <label asp-for="Price_biznes" class="control-label"></label>
                    <input asp-for="Price_biznes" class="form-control"></input>
                    <span asp-validation-for="Price_biznes" class="text-danger"></span>
         </div>
                <div class="form-group mt-5">
                    <label asp-for="DepartureTime" class="control-label"></label>
                    <input type="time" asp-for="DepartureTime" class="form-control"></input>
                    <span asp-validation-for="DepartureTime" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="ArrivalTime" class="control-label"></label>
                    <input type="time" asp-for="ArrivalTime" class="form-control"></input>
                    <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                </div>

                <div class="form-group mt-5">
                    <label asp-for="Plane" class="control-label"></label>
                    <select asp-for="Plane" class="form-control" asp-items="ViewBag.Planes"></select>
                    <span asp-validation-for="Plane" class="text-danger"></span>
                </div>
                <div class="form-group mt-5">
                    <label asp-for="ArrivalAirport" class="control-label"></label>
                    <select asp-for="ArrivalAirport" class="form-control" asp-items="ViewBag.airports"></select>
                    <span asp-validation-for="ArrivalAirport" class="text-danger"></span>
                </div>

                <div class="form-group mt-5">
                    <label asp-for="DepartureAirport" class="control-label"></label>
                    <select asp-for="DepartureAirport" class="form-control" asp-items="ViewBag.airports"></select>
                    <span asp-validation-for="DepartureAirport" class="text-danger"></span>
                </div>

                <div class="form-group mt-5">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</main>