@model SpecialOfferEditVM

@{
    ViewData["Title"] = "Edit Blog";
}
<main style="margin-top: 70px; margin-left:60px;width:1200px">
    <h2>Special Offers</h2>

    <h4>Special Offers</h4>
    <hr />
    Old Image
    <div>
        <img style="witdh:100px;height:200px;" src="~/assets/img/@Model.Image" />
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <textarea asp-for="Title" class="form-control"></textarea>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewImage" class="control-label"></label>
                    <input type="file" asp-for="NewImage" class="form-control" />
                    <span asp-validation-for="NewImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Culture" class="control-label"></label>
                    <input disabled asp-for="Culture" class="form-control" />
                    <span asp-validation-for="Culture" class="text-danger"></span>
                </div>




                <div class="form-group mt-5">
                    <input type="submit" value="Save" class="btn btn-primary mx-5" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</main> 
