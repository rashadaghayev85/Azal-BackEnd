@model List<Flight>
@{
   Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    @* <link rel="stylesheet" href="style.css"> *@
    <title>Document</title>
    <style>
        .ticket {
            width: 1200px;
            height: 270px;
            background: #DAC6C2;
            display: flex;
            border-radius: 20px;
        }

        .Left {
            width: 400px;
            height: 300px;
            /* background: yellow; */
        }

        .logo {
            width: 100%;
            height: 50px;
            display: flex;
            font-family: Arial, Helvetica, sans-serif;
            color: #6E7583;
            /* background: black; */
            padding-top: 5px;
            object-fit: cover;
            font-size: 15px;
        }

            .logo span {
                padding-top: 10px;
            }

        .time {
            width: 100%;
            height: 140px;
            /* background: green; */
            display: flex;
            font-family: Arial, Helvetica, sans-serif;
        }

        h1 {
            padding: 0px;
            margin: 0px;
        }

        .depart {
            width: 33.3%;
            height: 140px;
            /* background: wheat; */
            padding-top: 30px;
            box-sizing: border-box;
            padding-left: 20px;
            color: #2E3034;
        }

        .where {
            width: 33.3%;
            height: 140px;
            /* background: yellowgreen; */
            padding-top: 45px;
            box-sizing: border-box;
        }

        .border {
            width: 100%;
            border-top: 4px solid #2E3034;
            display: flex;
            justify-content: space-between;
        }

            .border span {
                font-size: 12px;
            }

        .arrival {
            width: 33.3%;
            height: 140px;
            /* background: wheat; */
            padding-top: 30px;
            box-sizing: border-box;
            padding-left: 20px;
            color: #2E3034;
        }

        .terminalName {
            width: 100%;
            height: 105px;
            background: w;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 13px;
            /* background: purple; */
            display: flex;
        }

        .firstName {
            width: 33.3%;
            height: 105px;
            /* background: aqua; */
            padding: 10px;
            box-sizing: border-box;
        }

        .space {
            width: 33.3%;
            height: 105px;
            /* background: yellow; */
            padding: 10px;
            box-sizing: border-box;
        }

        .secondName {
            width: 33.3%;
            height: 105px;
            /* background: aquamarine; */
            padding: 10px;
            box-sizing: border-box;
        }

        .Center {
            width: 400px;
            height: 300px;
            /* background: green; */
        }

        .planeId {
            width: 100%;
            height: 80px;
            /* background: aqua; */
            padding: 20px;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 14px;
        }

        .duration {
            width: 100%;
            height: 60px;
            /* background: blue; */
            font-family: Arial, Helvetica, sans-serif;
            font-size: 21px;
            padding-left: 10px;
            box-sizing: border-box;
        }

        .transfer {
            width: 100%;
            height: 160px;
            padding: 55px;
            /* background: yellow; */
            font-family: Arial, Helvetica, sans-serif;
            font-size: 15px;
            padding-left: 10px;
            box-sizing: border-box;
            color: #2E3034;
        }

        .Right {
            width: 400px;
            height: 300px;
            /* background: green; */
        }

        .price {
            width: 100%;
            height: 300px;
            /* background: red; */
            box-sizing: border-box;
            display: flex;
            font-family: Arial, Helvetica, sans-serif;
            color: #01357E;
        }

        .econom {
            width: 190px;
            height: 170px;
            /* background: green; */
            margin: 30px 20px;
            border: 4px solid transparent;
            border-radius: 15px;
            transition: 0.2s;
            cursor: pointer;
            padding: 10px;
        }

            .econom:hover {
                border: 4px solid #01357E;
            }

        .business {
            width: 190px;
            height: 170px;
            /* background: green; */
            margin: 30px 20px;
            border: 4px solid transparent;
            border-radius: 15px;
            transition: 0.2s;
            cursor: pointer;
            padding: 10px;
        }

            .business:hover {
                border: 4px solid #01357E;
            }

        .title {
            width: 100%;
            height: 100px;
            /* background: black; */
        }

        .subPrice {
            width: 100%;
            height: 30px;
            /* background: yellow; */
            font-size: 25px;
        }

        .subTitle {
            color: #6E7583;
        }</style>
</head>
<body>
    <div class="main">
       @foreach (var item in Model)
        {
            
        <div class="ticket">
            <div class="Left">
                <div class="logo"><img src="~/assets/img/AZALAzerbaijanAirlines.png" width="50px" height="50px" alt="azalLogo"> <span>Azerbaijan Airlines</span> </div>
                <div class="time">
                        <div class="depart"><h1>@item.DepartureTime.ToString("HH:mm")</h1> <br> <i class="fa-solid fa-plane-departure" style="color: #979DA8;"></i></div>
                    <div class="where">
                        <div class="border">
                            <span>@item.DepartureAirport.AirportCode</span>
                            <span>@item.ArrivalAirport.AirportCode</span>
                        </div>
                    </div>
                        <div class="arrival"><h1>@item.ArrivalTime.ToString("HH:mm")</h1> <br> <i class="fa-solid fa-plane-arrival" style="color: #979DA8;"></i></div>
                    <div class="departure"></div>
                </div>

                <div class="terminalName">
                    <div class="firstName">@item.DepartureAirport <br> <span style="color:#6E7583;">Terminal 1 <br> 15 Fev, CA</span> </div>
                    <div class="space"></div>
                    <div class="secondName">@item.ArrivalAirport <br> <span style="color:#6E7583;"> Terminal 1 <br> 15 Fev, CA</span> </div>
                </div>
            </div>

            <div class="Center">
                <div class="planeId">
                    <span style="color: #6E7583;"><i class="fa-solid fa-ticket"></i> J2 807 <i class="fa-solid fa-plane"></i> Airbus A320</span>
                </div>

                <div class="duration">1 s. 30 dəq</div>

                <div class="transfer">
                    Dayanacaqlar olmadan
                </div>
            </div>


            <div class="Right">
                <div class="price">
                    <div class="econom">
                        <div class="title">Ekonom</div>
                        <div class="subPrice">@item.Price_azn <i class="fa-solid fa-manat-sign"></i></div>
                        <div class="subTitle">Başlanğıc qiyməti</div>
                    </div>
                    <div class="business">
                        <div class="title">Biznes</div>
                        <div class="subPrice">@item.Price_usd <i class="fa-solid fa-manat-sign"></i></div>
                        <div class="subTitle">Başlanğıc qiyməti</div>
                    </div>
                </div>
            </div>
        </div>
        }
            




        <br>



     
    </div>
</body>
</html>
